<form asp-controller="User" asp-action="Change" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Name">
        @Html.ValidationMessageFor(x => x.Name)
    </div>

    <div class="form-group">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="E-mail">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="form-group">
        <label for="profile">Profile</label>
        <select asp-for="Profile" class="form-control">
            <option value="">Select</option>
            <option value="@ProfileEnum.Default">User Default</option>
            <option value="@ProfileEnum.Admin">Admin</option>
        </select>
        @Html.ValidationMessageFor(x => x.Profile)
    </div>

    <button type="submit" class="btn btn-primary col-12">Edit</button>
    <a class="btn btn-secondary col-12" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>
