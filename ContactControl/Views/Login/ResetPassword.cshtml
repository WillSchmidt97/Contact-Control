@model ResetPasswordModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Reset Password";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Login" asp-action="SendLinkForResetingPassword" method="post">
    <div class="mb-3" style="width: 30%;">
        <label for="login" class="form-label">Login</label>
        <input type="text" asp-for=Login class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3" style="width: 30%;">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for=Email class="form-control" id="Email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
    <a class="btn btn-secondary col-12" asp-controller="User" asp-action="Index" role="button">Back</a>
</form>
