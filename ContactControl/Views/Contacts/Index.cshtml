@model List<ContactsModel>
@{
    ViewData["Title"] = "Contacts List";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contacts" asp-action="AddCont">Add a new contact</a>
    </div>
    <br />

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["SuccessMessage"]
        </div>        
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["ErrorMessage"]
        </div>        
    }

    <h1 class="display-4">Contacts List</h1>

    <table class="table" id="contacts-table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Phone</th>
                <th scope="col">Postal code</th>
                <th scope="col">State</th>
                <th scope="col">City</th>
                <th scope="col">Neighborhood</th>
                <th scope="col">Adress</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContactsModel contacts in Model)
                {
                    <tr>
                        <th scope="row">@contacts.Id</th>
                        <td>@contacts.Name</td>
                        <td>@contacts.Email</td>
                        <td>@contacts.Phone</td>
                        <td>@contacts.Postalcode</td>
                        <td>@contacts.State</td>
                        <td>@contacts.City</td>
                        <td>@contacts.Neighborhood</td>
                        <td>@contacts.Address</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@contacts.Id" asp-controller="Contacts" asp-action="Edit">Edit</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@contacts.Id" asp-controller="Contacts" asp-action="Delete">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


